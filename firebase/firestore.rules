rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == resource.data.uid;
      allow delete: if request.auth.uid == resource.data.uid;
    }

    match /jobs/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if resource.data.company_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.company_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /applications/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if false;
      allow delete: if resource.data.applicant_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /categories/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /feedback_suggestions/{document} {
      allow create: if true;
      allow read: if false;
      allow write: if false;
      allow delete: if false;
    }

    match /notifications/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if false;
      allow delete: if true;
    }

    match /users/{parent}/uploaded_files/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if resource.data.file_owner_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if request.auth.uid == get(/databases/$(database)/documents/users/$(parent)).data.uid;
    }

    match /{path=**}/uploaded_files/{document} {
      allow read: if request.auth != null;
    }


    match /ff_user_push_notifications/{id} {
      allow read, update, delete: if false;
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) == request.resource.data.sender;
    }
  }
}
